  // простое применение i18n
  (function applyI18n() {
    const lang = document.documentElement.lang || 'ru';
    const d = window.dict[lang] || {};
    document.querySelectorAll('[data-i18n]').forEach(el => {
      const key = el.getAttribute('data-i18n');
      if (d[key]) el.innerHTML = d[key];
    });
  })();
</script>

