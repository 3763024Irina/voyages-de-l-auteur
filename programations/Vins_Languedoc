  <script>
    function openMail(e){
      e.preventDefault();
      const fd = new FormData(e.target);
      const subj = encodeURIComponent('Заявка: Винные домены Пик Сен-Лу');
      const body = encodeURIComponent(`Имя: ${fd.get('name')||''}\nКонтакт: ${fd.get('contact')||''}\nСообщение: ${fd.get('message')||''}`);
      window.location.href = `mailto:hello@example.com?subject=${subj}&body=${body}`;
    }
  </script>
