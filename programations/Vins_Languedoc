<script>
function openMail(e){
  e.preventDefault();
  const f = e.target;
  const name = encodeURIComponent(f.name.value);
  const contact = encodeURIComponent(f.contact.value);
  const start = encodeURIComponent(f.start.value);
  const date = encodeURIComponent(f.date.value);
  const guests = encodeURIComponent(f.guests.value || '');
  const msg = encodeURIComponent(f.msg.value);
  location.href = `mailto:hello@your-domain.fr?subject=–ó–∞–ø—Ä–æ—Å: –ü–∏–∫ –°–µ–Ω‚Äë–õ—É ‚Äî –≤–∏–Ω–Ω—ã–π –¥–µ–Ω—å&body=–ò–º—è:${name}%0A–ö–æ–Ω—Ç–∞–∫—Ç:${contact}%0A–°—Ç–∞—Ä—Ç:${start}%0A–î–∞—Ç–∞:${date}%0A–ì–æ—Å—Ç–µ–π:${guests}%0A${msg}`;
}
</script>

