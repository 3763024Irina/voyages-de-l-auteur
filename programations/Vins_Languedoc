<script>
function openMail(e){
  e.preventDefault();
  const f = e.target;
  const name = encodeURIComponent(f.name.value);
  const contact = encodeURIComponent(f.contact.value);
  const start = encodeURIComponent(f.start.value);
  const date = encodeURIComponent(f.date.value);
  const msg = encodeURIComponent(f.msg.value);
  location.href = `mailto:hello@your-domain.fr?subject=–ó–∞–ø—Ä–æ—Å: –í–∏–Ω–Ω—ã–π —Ç—É—Ä&body=–ò–º—è:${name}%0A–ö–æ–Ω—Ç–∞–∫—Ç:${contact}%0A–°—Ç–∞—Ä—Ç:${start}%0A–î–∞—Ç–∞:${date}%0A${msg}`;
}
</script>

